<?xml version="1.0" encoding="utf-8"?>
<!-- 熟人圈用户推荐中的单个用户的样式style -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:jy="http://schemas.android.com/apk/res/com.iyouxun"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingLeft="3.75dp"
	android:paddingRight="3.75dp"
	android:paddingTop="3.75dp"
	android:gravity="center_horizontal">
	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		<com.iyouxun.ui.views.CircularImage
			android:id="@+id/recommend_friend_avatar"
			android:layout_width="43dp"
			android:layout_height="43dp"
			jy:border_width="2dp"
			jy:border_color="@color/background_border" />
		<ImageView
			android:id="@+id/recommend_group_admin"
			android:layout_width="43dp"
			android:layout_height="43dp"
			android:src="@drawable/group_manager"
			android:visibility="gone" />
	</FrameLayout>
	<TextView
		android:id="@+id/recommend_friend_nick"
		android:layout_width="43dp"
		android:layout_height="wrap_content"
		android:textColor="@color/text_normal_blue"
		android:textSize="@dimen/text_small"
		android:layout_gravity="center_horizontal"
		android:gravity="center_horizontal"
		android:singleLine="true"
		android:ellipsize="end"
		android:layout_marginTop="5dp" />
</LinearLayout>