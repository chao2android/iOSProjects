<?xml version="1.0" encoding="utf-8"?>
<!-- 好友分组 -->
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<!-- 分组内容 -->
	<ListView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/friends_group_list"
		android:background="@color/WhiteColor"
		android:divider="@null"></ListView>
	<!-- 没有分组数据显示新建分组 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/WhiteColor"
		android:id="@+id/friends_group_create_box"
		android:clickable="true"
		android:orientation="vertical">
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="@string/no_friends_group"
			android:gravity="center"
			android:layout_marginTop="87dp"
			android:textColor="@color/text_small_gray"
			android:textSize="10sp" />
		<Button
			android:layout_height="44dp"
			android:layout_width="match_parent"
			android:id="@+id/friends_group_btn_create"
			android:text="@string/create_new_group"
			android:layout_marginRight="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="75dp"
			android:background="@drawable/btn_get_security_code_bg"
			android:textColor="@color/text_normal_white"
			android:textSize="14sp" />
	</LinearLayout>
	<View
		android:layout_height="1dp"
		android:layout_width="match_parent"
		android:background="@color/background_border" />
</FrameLayout>
