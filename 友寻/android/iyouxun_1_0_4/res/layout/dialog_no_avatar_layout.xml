<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@color/dialog_bg_color"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp">

		<TextView
			android:id="@id/txt_1"
			style="@style/item_txt_big"
			android:layout_marginTop="10dp"
			android:textColor="@color/dialog_title_color"
			android:text="@string/upload_avatar" />
		<TextView
			android:id="@id/txt_2"
			style="@style/item_txt_big"
			android:layout_below="@id/txt_1"
			android:layout_marginTop="5dp"
			android:textColor="@color/dialog_title_color"
			android:text="@string/dialog_photo_title_1" />
		<TextView
			android:id="@id/txt_3"
			style="@style/item_txt_middle"
			android:layout_alignBaseline="@id/txt_2"
			android:layout_toRightOf="@id/txt_2"
			android:layout_marginLeft="5dp"
			android:textColor="@color/dialog_title_color"
			android:text="@string/dialog_photo_title_2" />
	</RelativeLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="2dp"
		android:background="@color/RedColor" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/select_txt_1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="10dp"
			android:gravity="center"
			android:textSize="@dimen/global_px27sp"
			android:textColor="@color/WhiteColor"
			android:text="@string/dialog_select_gallery"
			android:background="@color/select_color" />
		<TextView
			android:id="@+id/select_txt_2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="10dp"
			android:gravity="center"
			android:textSize="@dimen/global_px27sp"
			android:textColor="@color/WhiteColor"
			android:text="@string/dialog_select_camera"
			android:background="@color/select_color" />
		<TextView
			android:id="@+id/select_txt_3"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="10dp"
			android:gravity="center"
			android:textSize="@dimen/global_px27sp"
			android:textColor="@color/WhiteColor"
			android:text="@string/exit_confirm_cancel"
			android:background="@color/dialog_item_no_select"
			android:visibility="gone" />
	</LinearLayout>

</LinearLayout>