<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="280dp"
	android:layout_height="wrap_content"
	android:background="@color/BlackColor"
	android:orientation="vertical">

	<TextView
		android:id="@+id/tv_alert_title"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:gravity="center"
		android:padding="@dimen/global_px10dp"
		android:textColor="@color/WhiteColor"
		android:textSize="15sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/global_px74dp"
		android:layout_marginLeft="1dp"
		android:layout_marginRight="1dp"
		android:layout_marginTop="1dp"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_alert_cancel"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/list_item_button_bg"
			android:text="@string/iyouxun_alert_me_later"
			android:textColor="@color/button_font_color"
			android:textSize="18sp" />

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/bg_separator" />

		<Button
			android:id="@+id/btn_alert_confirm"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/list_item_button_bg"
			android:text="@string/iyouxun_upload_now"
			android:textColor="@color/button_font_color"
			android:textSize="18sp" />
	</LinearLayout>

</LinearLayout>