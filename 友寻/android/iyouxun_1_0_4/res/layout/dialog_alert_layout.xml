<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/background_boder_circule_globalcolor_bg">
	<!-- 标题 -->
	<TextView
		android:id="@+id/dialogAlertTitle"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:textColor="@color/text_normal_black"
		android:textSize="@dimen/text_button_big"
		android:gravity="center_vertical|center_horizontal" />
	<!-- 提示信息 -->
	<TextView
		android:id="@+id/dialogAlertContent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:gravity="center_horizontal"
		android:textSize="@dimen/text_button_big"
		android:textColor="@color/text_normal_blue" />
	<!-- 中间横线 -->
	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/gray_main"
		android:layout_marginTop="20dp" />
	<!-- 确定按钮 -->
	<Button
		android:id="@+id/dialogAlertButton"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:textColor="@color/button_text_blue_white_color"
		android:background="@drawable/button_dialog_rightbottom_circule"
		android:text="确 定"
		android:textSize="@dimen/text_normal" />
</LinearLayout>
