<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:id="@+id/item_tag_box"
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:orientation="horizontal"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="5dp"
		android:background="@drawable/background_globalcolor_border_white_bg">
		<TextView
			android:id="@+id/item_tag_name"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:textColor="@color/blue_main"
			android:textSize="@dimen/text_tags"
			android:gravity="center" />
		<ImageView
			android:id="@+id/item_tag_add"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:src="@drawable/icon_add_tag"
			android:scaleType="fitCenter" />
	</LinearLayout>
</LinearLayout>