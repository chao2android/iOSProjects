<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="34dp"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:background="@drawable/background_top_bottom_border">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="帐号信息"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:gravity="left|center_vertical"
			android:paddingLeft="15dp" />
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingLeft="15dp"
			android:layout_marginTop="12dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="当前登录帐号:"
				android:textColor="@color/text_normal_gray"
				android:textSize="@dimen/text_normal" />
			<TextView
				android:id="@+id/settingSecurityAccountInfo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/text_normal_black"
				android:textSize="@dimen/text_normal"
				android:layout_marginLeft="10dp" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:background="@drawable/background_top_bottom_border"
		android:orientation="vertical">
		<!-- 找回密码 -->
		<Button
			android:id="@+id/settingSecurityFindPwdButton"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:text="找回密码"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:gravity="left|center_vertical"
			android:drawableRight="@drawable/icon_arrow"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:background="@color/transparent" />
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/background_border"
			android:layout_marginLeft="15dp" />
		<!-- 修改密码 -->
		<Button
			android:id="@+id/settingSecurityChangePwdButton"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:text="修改密码"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:gravity="left|center_vertical"
			android:drawableRight="@drawable/icon_arrow"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:background="@color/transparent" />
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/background_border"
			android:layout_marginLeft="15dp" />
		<!-- 修改登录手机号 -->
		<Button
			android:id="@+id/settingSecurityChangeMobileButton"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:text="修改登录手机号"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:gravity="left|center_vertical"
			android:drawableRight="@drawable/icon_arrow"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:background="@color/transparent" />
	</LinearLayout>
</LinearLayout>