<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="@dimen/global_px180dp"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:background="@drawable/loading_bg"
		android:gravity="center_horizontal"
		android:minHeight="@dimen/global_px140dp"
		android:orientation="vertical">

		<ProgressBar
			android:layout_width="@dimen/global_px38dp"
			android:layout_height="@dimen/global_px38dp"
			android:layout_marginTop="@dimen/global_px25dp"
			android:indeterminateDrawable="@drawable/rotate_loading" />

		<TextView
			android:id="@+id/loading_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/global_px15dp"
			android:ellipsize="end"
			android:gravity="center"
			android:lines="1"
			android:text="@string/iyouxun_loading"
			android:textColor="@color/WhiteColor"
			android:textSize="@dimen/global_px30sp" />
	</LinearLayout>

</RelativeLayout>