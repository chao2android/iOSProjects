<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/background_global">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<!-- 标题 -->
		<TextView
			android:id="@+id/item_share_pop_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="分享给好友"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:gravity="center"
			android:paddingTop="15dp"
			android:paddingBottom="15dp" />
		<!-- 列表 -->
		<GridView
			android:id="@+id/item_share_pop_gridview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:listSelector="@drawable/list_selector_globalcolor_white_bg"
			android:numColumns="5" />
		<!-- 取消按钮 -->
		<Button
			android:id="@+id/item_share_pop_cancel"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:background="@drawable/button_dialog_blue"
			android:layout_marginTop="22dp"
			android:text="取消"
			android:textColor="@color/text_normal_white"
			android:textSize="@dimen/text_normal" />
	</LinearLayout>
</LinearLayout>