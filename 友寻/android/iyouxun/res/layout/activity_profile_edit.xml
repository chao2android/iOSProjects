<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<!-- 情感 -->
	<LinearLayout
		android:id="@+id/profile_marry_edit_box"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="30dp"
		android:background="@color/background_content"
		android:visibility="gone">
		<ListView
			android:id="@+id/profile_marry_edit_lv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:divider="@color/transparent"
			android:dividerHeight="0dp" />
	</LinearLayout>
	<!-- 生日 -->
	<RelativeLayout
		android:id="@+id/profile_birth_edit_box"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:background="@drawable/background_topbottom_globalcolor_border_white_bg"
		android:visibility="gone">
		<TextView
			android:id="@+id/profile_edit_title_icon1"
			android:layout_width="wrap_content"
			android:layout_height="44dp"
			android:text="生日"
			android:textColor="@color/text_normal_gray"
			android:textSize="@dimen/text_normal"
			android:gravity="center_vertical"
			android:layout_alignParentLeft="true"
			android:paddingLeft="15dp"
			android:paddingRight="45dp" />
		<TextView
			android:id="@+id/profile_birth_tv"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:layout_toRightOf="@id/profile_edit_title_icon1"
			android:gravity="center_vertical" />
	</RelativeLayout>
	<!-- 身高 -->
	<RelativeLayout
		android:id="@+id/profile_height_edit_box"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:background="@drawable/background_topbottom_globalcolor_border_white_bg"
		android:visibility="gone">
		<TextView
			android:id="@+id/profile_edit_title_icon2"
			android:layout_width="wrap_content"
			android:layout_height="44dp"
			android:text="身高"
			android:textColor="@color/text_normal_gray"
			android:textSize="@dimen/text_normal"
			android:gravity="center_vertical"
			android:layout_alignParentLeft="true"
			android:paddingLeft="15dp"
			android:paddingRight="45dp" />
		<TextView
			android:id="@+id/profile_height_tv"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:layout_toRightOf="@id/profile_edit_title_icon2"
			android:gravity="center_vertical" />
	</RelativeLayout>
	<!-- 体重 -->
	<RelativeLayout
		android:id="@+id/profile_weight_edit_box"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:background="@drawable/background_topbottom_globalcolor_border_white_bg"
		android:visibility="gone">
		<TextView
			android:id="@+id/profile_edit_title_icon3"
			android:layout_width="wrap_content"
			android:layout_height="44dp"
			android:text="体重"
			android:textColor="@color/text_normal_gray"
			android:textSize="@dimen/text_normal"
			android:gravity="center_vertical"
			android:layout_alignParentLeft="true"
			android:paddingLeft="15dp"
			android:paddingRight="45dp" />
		<TextView
			android:id="@+id/profile_weight_tv"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:layout_toRightOf="@id/profile_edit_title_icon3"
			android:gravity="center_vertical" />
	</RelativeLayout>
	<!-- 职业 -->
	<RelativeLayout
		android:id="@+id/profile_job_edit_box"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:background="@drawable/background_topbottom_globalcolor_border_white_bg"
		android:visibility="gone">
		<TextView
			android:id="@+id/profile_edit_title_icon4"
			android:layout_width="wrap_content"
			android:layout_height="44dp"
			android:text="职业"
			android:textColor="@color/text_normal_gray"
			android:textSize="@dimen/text_normal"
			android:gravity="center_vertical"
			android:layout_alignParentLeft="true"
			android:paddingLeft="15dp"
			android:paddingRight="45dp" />
		<TextView
			android:id="@+id/profile_job_tv"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:layout_toRightOf="@id/profile_edit_title_icon4"
			android:gravity="center_vertical" />
	</RelativeLayout>
	<!-- 位置 -->
	<RelativeLayout
		android:id="@+id/profile_location_edit_box"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:background="@drawable/background_topbottom_globalcolor_border_white_bg"
		android:visibility="gone">
		<TextView
			android:id="@+id/profile_edit_title_icon6"
			android:layout_width="wrap_content"
			android:layout_height="44dp"
			android:text="地区"
			android:textColor="@color/text_normal_gray"
			android:textSize="@dimen/text_normal"
			android:gravity="center_vertical"
			android:layout_alignParentLeft="true"
			android:paddingLeft="15dp"
			android:paddingRight="45dp" />
		<TextView
			android:id="@+id/profile_location_tv"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal"
			android:layout_toRightOf="@id/profile_edit_title_icon6"
			android:gravity="center_vertical" />
	</RelativeLayout>
	<!-- 常驻地 -->
	<LinearLayout
		android:id="@+id/profile_address_edit_box"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="30dp"
		android:visibility="gone">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@drawable/background_topbottom_globalcolor_border_white_bg">
			<TextView
				android:id="@+id/profile_edit_title_icon7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="常驻地址"
				android:gravity="center_vertical"
				android:textColor="@color/text_normal_gray"
				android:textSize="@dimen/text_normal"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="15dp"
				android:paddingRight="45dp" />
			<EditText
				android:id="@+id/profile_address_et"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/transparent"
				android:textColor="@color/text_normal_black"
				android:textSize="@dimen/text_normal"
				android:lineSpacingExtra="3dp"
				android:gravity="left|top"
				android:hint="请填写常住地址"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingRight="15dp" />
		</LinearLayout>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="你经常去的地方"
			android:textSize="@dimen/text_normal"
			android:textColor="@color/text_normal_gray"
			android:layout_marginTop="10dp"
			android:paddingLeft="15dp" />
	</LinearLayout>

</LinearLayout>
