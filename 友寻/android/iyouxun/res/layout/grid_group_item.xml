<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<RelativeLayout
		android:id="@+id/msgbox_sys_item_top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/background_global"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp">
		<!-- 相册图片 -->
		<com.iyouxun.ui.views.MyImageView
			android:id="@+id/group_image"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/pic_default_square"
			android:layout_gravity="left|center_vertical"
			android:scaleType="centerCrop" />
		<!-- 相册名称 -->
		<TextView
			android:id="@+id/group_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:textColor="@color/text_normal_black"
			android:layout_marginLeft="15dp"
			android:singleLine="true"
			android:ellipsize="end"
			android:layout_toRightOf="@id/group_image"
			android:layout_centerVertical="true" />
	</RelativeLayout>
</RelativeLayout>