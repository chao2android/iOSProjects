<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:background="@color/text_normal_blue"
		android:paddingBottom="43dp"
		android:paddingTop="60dp">
		<ImageView
			android:id="@+id/stranger_icon"
			android:layout_width="88dp"
			android:layout_height="88dp"
			android:layout_centerHorizontal="true"
			android:src="@drawable/app_icon" />
		<TextView
			android:id="@+id/stranger_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/text_normal_white"
			android:textSize="@dimen/text_button_big"
			android:layout_below="@id/stranger_icon"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="20dp" />
		<TextView
			android:id="@+id/stranger_info_desc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="加个好友认识一下吧！"
			android:textColor="@color/text_normal_white"
			android:textSize="@dimen/text_button_big"
			android:layout_below="@id/stranger_info"
			android:layout_centerHorizontal="true" />
		<Button
			android:id="@+id/stranger_button_ok"
			android:layout_width="130dp"
			android:layout_height="44dp"
			android:text="加为好友"
			android:textColor="@color/button_text_blue_white_color"
			android:background="@drawable/button_white_gray_bg"
			android:layout_below="@id/stranger_info_desc"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="69dp" />
	</RelativeLayout>
</RelativeLayout>