<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="107dp"
		android:layout_height="74dp"
		android:orientation="vertical"
		android:background="@drawable/bg_search_menu"
		android:layout_marginLeft="5dp">
		<LinearLayout
			android:id="@+id/menuDialogAllButton"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:background="@drawable/background_tab_button"
			android:orientation="horizontal"
			android:gravity="center">
			<ImageView
				android:id="@+id/menuDialogAllButton_icon"
				android:layout_width="15dp"
				android:layout_height="12dp"
				android:src="@drawable/icn_friends_selected"
				android:visibility="gone" />
			<TextView
				android:id="@+id/menuDialogAllButton_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/background_tab_button"
				android:textColor="@color/blue_main"
				android:textSize="@dimen/text_normal"
				android:layout_marginLeft="5dp"
				android:text="全部" />
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/background_border"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp" />
		<LinearLayout
			android:id="@+id/menuDialogSingleButton"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:background="@drawable/background_tab_button"
			android:orientation="horizontal"
			android:gravity="center">
			<ImageView
				android:id="@+id/menuDialogSingleButton_icon"
				android:layout_width="15dp"
				android:layout_height="12dp"
				android:src="@drawable/icn_friends_selected"
				android:visibility="gone" />
			<TextView
				android:id="@+id/menuDialogSingleButton_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/background_tab_button"
				android:textColor="@color/blue_main"
				android:textSize="@dimen/text_normal"
				android:layout_marginLeft="5dp"
				android:text="只看单身" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>