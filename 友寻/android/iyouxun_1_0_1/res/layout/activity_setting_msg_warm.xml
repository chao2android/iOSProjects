<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/settingMsgWarmGetButtonBox"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_marginTop="34dp"
		android:background="@drawable/background_top_bottom_border">
		<CheckBox
			android:id="@+id/settingMsgWarmGetButton"
			android:layout_width="56dp"
			android:layout_height="28dp"
			android:button="@null"
			android:background="@drawable/button_setting"
			android:clickable="false"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="15dp" />
		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="接受消息提示"
			android:textColor="@color/text_normal_gray"
			android:textSize="@dimen/text_normal"
			android:gravity="center_vertical|left"
			android:paddingLeft="15dp"
			android:layout_toLeftOf="@id/settingMsgWarmGetButton" />
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="30dp"
		android:background="@drawable/background_top_bottom_border">
		<RelativeLayout
			android:id="@+id/settingMsgWarmVoiceGetButtonBox"
			android:layout_width="match_parent"
			android:layout_height="44dp">
			<CheckBox
				android:id="@+id/settingMsgWarmVoiceGetButton"
				android:layout_width="56dp"
				android:layout_height="28dp"
				android:button="@null"
				android:background="@drawable/button_setting"
				android:clickable="false"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="15dp" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="响铃"
				android:textColor="@color/text_normal_gray"
				android:textSize="@dimen/text_normal"
				android:gravity="center_vertical|left"
				android:paddingLeft="15dp"
				android:layout_toLeftOf="@id/settingMsgWarmVoiceGetButton" />
		</RelativeLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/background_border"
			android:layout_marginLeft="15dp" />
		<RelativeLayout
			android:id="@+id/settingMsgWarmVibrationGetButtonBox"
			android:layout_width="match_parent"
			android:layout_height="44dp">
			<CheckBox
				android:id="@+id/settingMsgWarmVibrationGetButton"
				android:layout_width="56dp"
				android:layout_height="28dp"
				android:button="@null"
				android:background="@drawable/button_setting"
				android:clickable="false"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="15dp" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="震动"
				android:textColor="@color/text_normal_gray"
				android:textSize="@dimen/text_normal"
				android:gravity="center_vertical|left"
				android:paddingLeft="15dp"
				android:layout_toLeftOf="@id/settingMsgWarmVibrationGetButton" />
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
