<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="44dp">
		<!-- icon -->
		<ImageView
			android:id="@+id/settingOpenPlatformIcon"
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dp" />
		<!-- 箭头 -->
		<TextView
			android:id="@+id/settingOpenPlatformStatus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableRight="@drawable/icon_arrow"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:drawablePadding="10dp"
			android:paddingRight="15dp"
			android:text="未绑定"
			android:textColor="@color/text_normal_black"
			android:textSize="@dimen/text_normal" />
		<!-- name -->
		<TextView
			android:id="@+id/settingOpenPlatformName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/settingOpenPlatformIcon"
			android:layout_toLeftOf="@id/settingOpenPlatformStatus"
			android:layout_marginLeft="15dp"
			android:layout_centerVertical="true"
			android:textColor="@color/text_normal_gray"
			android:textSize="@dimen/text_normal" />
	</RelativeLayout>
	<View
		android:id="@+id/settingOpenPlatformDeliver"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/background_border"
		android:layout_marginLeft="15dp" />
</LinearLayout>