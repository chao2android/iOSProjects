<?xml version="1.0" encoding="utf-8"?>
<!-- 没有好友的页面 -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/background_top_border"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="@string/no_friends"
		android:gravity="center"
		android:layout_marginTop="87dp"
		android:textColor="@color/text_small_gray"
		android:textSize="12sp" />
	<Button
		android:layout_height="44dp"
		android:layout_width="match_parent"
		android:id="@+id/no_friends_btn_add"
		android:text="@string/str_add_friends"
		android:layout_marginRight="15dp"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="75dp"
		android:background="@drawable/btn_get_security_code_bg"
		android:textColor="@color/text_normal_white"
		android:textSize="14sp" />
</LinearLayout>
