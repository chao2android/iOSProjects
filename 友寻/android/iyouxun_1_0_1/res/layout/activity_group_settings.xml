<?xml version="1.0" encoding="utf-8"?>
<!-- 群组设置页面 -->
<ScrollView
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<!-- 群组成员 -->
		<RelativeLayout
			android:layout_marginTop="34dp"
			android:layout_height="44dp"
			android:layout_width="match_parent"
			android:background="@color/WhiteColor">
			<View
				android:layout_height="0.6dp"
				android:layout_width="match_parent"
				android:background="@color/background_border"
				android:layout_alignParentTop="true" />
			<TextView
				android:id="@+id/group_settings_group_members_title"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:textColor="@color/text_normal_gray"
				android:textSize="14sp"
				android:text="@string/message_group_members"
				android:gravity="center_vertical"
				android:layout_marginLeft="15sp" />
			<TextView
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:layout_toRightOf="@id/group_settings_group_members_title"
				android:paddingLeft="10dp"
				android:textSize="14sp"
				android:textColor="@color/text_normal_black"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:id="@+id/group_settings_group_members" />
			<TextView
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:layout_alignParentRight="true"
				android:paddingRight="15dp"
				android:paddingLeft="10dp"
				android:drawableRight="@drawable/icon_arrow"
				android:id="@+id/group_settings_group_members_icon_arrow" />
			<HorizontalScrollView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:layout_toLeftOf="@id/group_settings_group_members_icon_arrow"
				android:layout_toRightOf="@id/group_settings_group_members"
				android:layout_centerVertical="true"
				android:scrollbars="none">
				<LinearLayout
					android:layout_height="match_parent"
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:id="@+id/group_settings_group_members_avatars"
					android:layout_gravity="left|center_vertical"></LinearLayout>
			</HorizontalScrollView>
		</RelativeLayout>
		<!-- 群组名称 -->
		<RelativeLayout
			android:layout_height="44dp"
			android:layout_width="match_parent"
			android:background="@color/WhiteColor">
			<View
				android:layout_height="0.6dp"
				android:layout_width="match_parent"
				android:background="@color/background_border"
				android:layout_alignParentTop="true" />
			<TextView
				android:id="@+id/group_settings_group_name_title"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:textColor="@color/text_normal_gray"
				android:textSize="14sp"
				android:text="@string/chat_group_name"
				android:gravity="center_vertical"
				android:layout_marginLeft="15sp" />
			<TextView
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_toRightOf="@id/group_settings_group_name_title"
				android:paddingLeft="10dp"
				android:paddingRight="15dp"
				android:drawablePadding="10dp"
				android:drawableRight="@drawable/icon_arrow"
				android:textSize="14sp"
				android:textColor="@color/text_normal_black"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:id="@+id/group_settings_group_name" />
		</RelativeLayout>

		<!-- 群组简介 -->
		<RelativeLayout
			android:layout_height="44dp"
			android:layout_width="match_parent"
			android:background="@color/WhiteColor">
			<View
				android:layout_height="0.6dp"
				android:layout_width="match_parent"
				android:background="@color/background_border"
				android:layout_alignParentTop="true" />
			<TextView
				android:id="@+id/group_settings_group_introduction_title"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:textColor="@color/text_normal_gray"
				android:textSize="14sp"
				android:text="@string/message_group_introduction"
				android:gravity="center_vertical"
				android:layout_marginLeft="15sp" />
			<TextView
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_toRightOf="@id/group_settings_group_introduction_title"
				android:paddingLeft="10dp"
				android:paddingRight="15dp"
				android:drawablePadding="10dp"
				android:drawableRight="@drawable/icon_arrow"
				android:textSize="14sp"
				android:textColor="@color/text_normal_black"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:id="@+id/group_settings_group_introduction" />
		</RelativeLayout>
		<View
			android:layout_height="0.6dp"
			android:layout_width="match_parent"
			android:background="@color/background_border" />
		<View
			android:layout_height="0.6dp"
			android:layout_width="match_parent"
			android:background="@color/background_border"
			android:layout_marginTop="30dp" />
		<!-- 权限设置 -->
		<RelativeLayout
			android:layout_height="44dp"
			android:layout_width="match_parent"
			android:id="@+id/group_settings_group_privilege_box"
			android:visibility="gone"
			android:background="@color/WhiteColor">
			<View
				android:layout_height="0.6dp"
				android:layout_width="match_parent"
				android:background="@color/background_border"
				android:layout_alignParentBottom="true"
				android:layout_marginLeft="15dp" />
			<TextView
				android:id="@+id/group_settings_group_privilege_title"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:textColor="@color/text_normal_gray"
				android:textSize="14sp"
				android:text="@string/message_privilege_setting"
				android:gravity="center_vertical"
				android:layout_marginLeft="15sp" />
			<TextView
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_toRightOf="@id/group_settings_group_privilege_title"
				android:paddingLeft="10dp"
				android:paddingRight="15dp"
				android:drawablePadding="10dp"
				android:drawableRight="@drawable/icon_arrow"
				android:textSize="14sp"
				android:textColor="@color/text_normal_black"
				android:text="所有人可以直接加入"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:id="@+id/group_settings_group_privilege" />
		</RelativeLayout>


		<!-- 群组状态 -->
		<RelativeLayout
			android:layout_height="44dp"
			android:layout_width="match_parent"
			android:paddingLeft="15dp"
			android:id="@+id/group_settings_group_status_box"
			android:background="@color/WhiteColor">
			<View
				android:layout_height="0.6dp"
				android:layout_width="match_parent"
				android:background="@color/background_border"
				android:layout_alignParentBottom="true" />
			<TextView
				android:id="@+id/group_settings_group_status_title"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:textColor="@color/text_normal_gray"
				android:textSize="14sp"
				android:text="@string/message_group_status"
				android:gravity="center_vertical" />
			<CheckBox
				android:id="@+id/group_settings_group_status_check"
				android:layout_width="56dp"
				android:layout_height="28dp"
				android:button="@null"
				android:background="@drawable/button_setting"
				android:clickable="false"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="15dp" />
			<TextView
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_toRightOf="@id/group_settings_group_status_title"
				android:layout_toLeftOf="@id/group_settings_group_status_check"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:textSize="14sp"
				android:textColor="@color/text_normal_black"
				android:text="公开 (将被推荐给好友)"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:id="@+id/group_settings_group_status" />
		</RelativeLayout>
		<!-- 消息提醒 -->
		<RelativeLayout
			android:layout_height="44dp"
			android:layout_width="match_parent"
			android:paddingLeft="15dp"
			android:id="@+id/group_settings_group_remind_box"
			android:background="@color/WhiteColor">
			<View
				android:layout_height="0.6dp"
				android:layout_width="match_parent"
				android:background="@color/background_border"
				android:layout_alignParentBottom="true" />
			<TextView
				android:id="@+id/group_settings_group_remind_title"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:textColor="@color/text_normal_gray"
				android:textSize="14sp"
				android:text="@string/message_remind"
				android:gravity="center_vertical" />
			<CheckBox
				android:id="@+id/group_settings_group_remind_check"
				android:layout_width="56dp"
				android:layout_height="28dp"
				android:button="@null"
				android:background="@drawable/button_setting"
				android:clickable="false"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="15dp" />
			<TextView
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_toRightOf="@id/group_settings_group_remind_title"
				android:layout_toLeftOf="@id/group_settings_group_remind_check"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:textSize="14sp"
				android:textColor="@color/text_normal_black"
				android:text="消息免打扰"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:id="@+id/group_settings_group_remind" />
		</RelativeLayout>
		<RelativeLayout
			android:layout_height="44dp"
			android:layout_width="match_parent"
			android:id="@+id/group_settings_group_show_box"
			android:background="@color/WhiteColor">
			<TextView
				android:id="@+id/group_settings_group_show_title"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_alignParentLeft="true"
				android:textColor="@color/text_normal_gray"
				android:textSize="14sp"
				android:text="是否展示"
				android:gravity="center_vertical" />
			<CheckBox
				android:id="@+id/group_settings_group_show_check"
				android:layout_width="56dp"
				android:layout_height="28dp"
				android:button="@null"
				android:background="@drawable/button_setting"
				android:clickable="false"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="15dp" />
			<TextView
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_toRightOf="@id/group_settings_group_show_title"
				android:layout_toLeftOf="@id/group_settings_group_show_check"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:textSize="14sp"
				android:textColor="@color/text_normal_black"
				android:text="在资料页展示给其他人"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:id="@+id/group_settings_group_show" />
		</RelativeLayout>
		<View
			android:layout_height="0.6dp"
			android:layout_width="match_parent"
			android:background="@color/background_border"
			android:layout_alignParentBottom="true" />
		<Button
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="34dp"
			android:background="@color/WhiteColor"
			android:text="@string/group_leave"
			android:textColor="@color/text_normal_red"
			android:id="@+id/group_settings_group_leave" />
	</LinearLayout>
</ScrollView>