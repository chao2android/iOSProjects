<?xml version="1.0" encoding="utf-8"?>
<!-- 编辑好友分组 -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<!-- 分组名 -->
	<LinearLayout
		android:layout_height="44dp"
		android:layout_width="match_parent"
		android:layout_marginTop="34dp"
		android:orientation="horizontal"
		android:background="@drawable/background_top_bottom_border"
		android:focusable="true"
		android:focusableInTouchMode="true">
		<TextView
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:layout_marginLeft="15dp"
			android:textSize="14sp"
			android:textColor="@color/text_normal_gray"
			android:text="@string/group_name"
			android:gravity="center" />
		<com.iyouxun.ui.views.ClearEditText
			android:id="@+id/edit_group_name"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:gravity="left|center_vertical"
			android:singleLine="true"
			android:background="@color/transparent"
			android:textSize="14sp"
			android:textColor="@color/text_normal_black"
			android:paddingRight="15dp"
			android:paddingLeft="20dp"
			android:maxLength="14" />
	</LinearLayout>
	<!-- 分组成员 -->
	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_marginTop="22dp"
		android:orientation="vertical"
		android:background="@drawable/background_top_bottom_border">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:textColor="@color/text_normal_gray"
			android:text="@string/str_member"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginBottom="15dp"
			android:id="@+id/edit_group_count" />
		<GridView
			android:paddingLeft="19dp"
			android:paddingRight="19dp"
			android:id="@+id/edit_group_gridview"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:background="@color/WhiteColor"
			android:horizontalSpacing="8dp"
			android:numColumns="5"
			android:verticalSpacing="15dp">
		</GridView>
	</LinearLayout>
</LinearLayout>
