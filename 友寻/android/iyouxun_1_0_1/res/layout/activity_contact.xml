<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/WhiteColor">
	<View
		android:layout_height="0.6dp"
		android:layout_width="match_parent"
		android:background="@color/background_border" />
	<RelativeLayout
		android:layout_height="44dp"
		android:layout_width="match_parent"
		android:background="@color/WhiteColor"
		android:id="@+id/contact_filter_edit_box"
		android:focusable="true"
		android:focusableInTouchMode="true">
		<TextView
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="@string/exit_confirm_cancel"
			android:id="@+id/contact_btn_cancel"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@color/transparent"
			android:textSize="14sp"
			android:textColor="@color/text_normal_blue"
			android:paddingRight="15dp"
			android:gravity="center"
			android:visibility="gone" />
		<com.iyouxun.ui.views.ClearEditText
			android:id="@+id/contact_filter_edit"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/contact_btn_cancel"
			android:background="@color/background_global"
			android:drawableLeft="@drawable/search_bar_icon_normal"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:paddingRight="15dp"
			android:hint="@string/str_search_hint"
			android:singleLine="true"
			android:textSize="14sp"
			android:textColor="@color/text_normal_black"
			android:textColorHint="@color/text_normal_gray"
			android:layout_centerInParent="true"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="5dp" />
		<View
			android:layout_height="0.5dp"
			android:layout_width="match_parent"
			android:background="@color/background_border"
			android:layout_alignParentBottom="true" />
	</RelativeLayout>
	<RelativeLayout
		android:layout_height="34dp"
		android:layout_width="match_parent"
		android:layout_below="@id/contact_filter_edit_box"
		android:id="@+id/contact_select_all_box">
		<!-- 筛选按钮 -->
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/select_all"
			android:id="@+id/contact_btn_select_all"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@color/transparent"
			android:textSize="14sp"
			android:textColor="@color/text_normal_blue"
			android:layout_marginRight="10dp"
			android:padding="5dp" />
		<!-- 好友数量 -->
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:gravity="left|center_vertical"
			android:text="@string/select_want_invitation"
			android:layout_toLeftOf="@id/contact_btn_select_all"
			android:layout_marginLeft="15dp"
			android:id="@+id/manage_friends_count"
			android:layout_centerVertical="true"
			android:textSize="14sp"
			android:textColor="@color/text_normal_gray" />
	</RelativeLayout>
	<RelativeLayout
		android:layout_height="44dp"
		android:layout_width="match_parent"
		android:layout_alignParentBottom="true"
		android:id="@+id/contact_selected_box"
		android:background="@drawable/background_top_bottom_border">
		<Button
			android:layout_height="44dp"
			android:layout_width="100dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:id="@+id/contact_btn_invite"
			android:text="@string/invite"
			android:background="@drawable/btn_get_security_code_bg"
			android:textSize="14sp"
			android:textColor="@color/WhiteColor"
			android:singleLine="true" />
		<HorizontalScrollView
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_toLeftOf="@id/contact_btn_invite"
			android:layout_centerVertical="true"
			android:scrollbars="none"
			android:paddingLeft="15dp"
			android:paddingRight="15dp">
			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:gravity="center"
				android:id="@+id/contact_invition_contact">
				<TextView
					android:id="@+id/contact_item_text"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:textColor="@color/text_normal_blue"
					android:textSize="14sp" />
			</LinearLayout>
		</HorizontalScrollView>
	</RelativeLayout>
	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@id/contact_selected_box"
		android:layout_below="@id/contact_select_all_box">
		<ListView
			android:id="@+id/contact_contacts"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:cacheColorHint="@android:color/transparent"
			android:divider="@color/transparent"
			android:dividerHeight="0dp"
			android:listSelector="@color/transparent"
			android:layout_marginRight="15dp">
		</ListView>
		<com.iyouxun.ui.views.SideBar
			android:id="@+id/contact_sidrbar"
			android:layout_width="15dp"
			android:layout_height="fill_parent"
			android:layout_gravity="right|center" />
	</FrameLayout>
</RelativeLayout>